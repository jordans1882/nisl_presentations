				\includegraphics[width=1.0\paperwidth]{./sty/MSUheader.png}
			};	
			\node[at=(current page.south west),anchor=south west,inner sep=-1pt]{
				\includegraphics[width=0.8\paperwidth]{./sty/MSUfooter.png}
			};	
			\node[at=(current page.south east),anchor=south east,inner sep=-1pt]{
				%\includegraphics[width=0.18\paperwidth]{./sty/nisl-logo.jpg}
			};	
		\end{tikzpicture}
    \else%
            % Other frames background go here.  Currently none.
    \fi%
}

% title page
\defbeamertemplate*{title page}{MSU}[1][]
{ 
  \begin{center}
    \vspace{0.3in}
	\usebeamerfont{title}\huge{\bf\inserttitle}\par
	\vspace{0.05in}
	\usebeamerfont{subtitle}\Large{\insertsubtitle}\par		
  	\vspace{0.2in}
	\usebeamerfont{date}\large{\insertdate}\par	  
  \end{center}
  \vspace{0.1in}
  {\flushright
	\setbeamercolor{author}{bg=white}
	\usebeamerfont{author} \Large{\insertauthor}\par
	\vspace{0.08in}
	\usebeamerfont{institute}\large{\insertinstitute}\par
	}
}


\mode<all>